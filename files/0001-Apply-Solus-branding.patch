From f5bd3a4ed9762b07b9c5d6482a0db7a92c0808db Mon Sep 17 00:00:00 2001
From: Evan Maddock <maddock.evan@vivaldi.net>
Date: Mon, 2 Jan 2023 10:53:02 -0500
Subject: [PATCH] Apply Solus branding

Signed-off-by: Evan Maddock <maddock.evan@vivaldi.net>
---
 data/x.dm.slick-greeter.gschema.xml | 10 +++++-----
 1 file changed, 5 insertions(+), 5 deletions(-)

diff --git a/data/x.dm.slick-greeter.gschema.xml b/data/x.dm.slick-greeter.gschema.xml
index a507a7a..ab85c16 100644
--- a/data/x.dm.slick-greeter.gschema.xml
+++ b/data/x.dm.slick-greeter.gschema.xml
@@ -2,7 +2,7 @@
 <schemalist gettext-domain="slick-greeter">
   <schema id="x.dm.slick-greeter" path="/x/dm/slick-greeter/">
     <key name="background" type="s">
-      <default>''</default>
+      <default>'/usr/share/backgrounds/solus/IMG_9710.png'</default>
       <summary>Background file to use</summary>
     </key>
     <key name="background-color" type="s">
@@ -54,15 +54,15 @@
       <summary>Logo file to use for other monitors</summary>
     </key>
     <key name="theme-name" type="s">
-      <default>'Adwaita'</default>
+      <default>'Arc-Darker'</default>
       <summary>GTK+ theme to use</summary>
     </key>
     <key name="icon-theme-name" type="s">
-      <default>'gnome'</default>
+      <default>'Arc'</default>
       <summary>Icon theme to use</summary>
     </key>
     <key name="cursor-theme-name" type="s">
-      <default>'default'</default>
+      <default>'breeze_cursors'</default>
       <summary>Cursor theme to use</summary>
     </key>
     <key name="cursor-theme-size" type="i">
@@ -70,7 +70,7 @@
       <summary>Size to use for cursors</summary>
     </key>
     <key name="font-name" type="s">
-      <default>'Ubuntu 11'</default>
+      <default>'Clear Sans 10'</default>
       <summary>Font to use</summary>
     </key>
     <key name="xft-antialias" type="b">
